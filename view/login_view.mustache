
<div class='w3-container w3-content w3-center w3-padding-64' style='max-width:800px' id='band'>
    <h2 class='w3-wide'>Login</h2>
    <p class='w3-justify'>Bienvenidos!</p>
    <div class='w3-row w3-padding-32'>
    {{#exito}}
        <div class="w3-green">Se inició sesion</div>
    {{/exito}}

    {{#error}}
        <div class="w3-red">No se inicio sesion</div>
    {{/error}}
        <form class="registro-formulario" action="/login/verify" method="post" enctype="multipart/form-data">
         <label for="nombreUsuario" class="registro-label">Nombre de Usuario:</label>
        <input type="text" id="nombreUsuario" name="nombreUsuario" class="registro-input" required><br><br>

         <label for="contrasenia" class="registro-label">Contraseña:</label>
        <input type="password" id="contrasenia" name="contrasenia" class="registro-input" required><br><br>

        <input type="submit" value="Login" class="boton-registrarse">

        </form>
    </div>
</div>