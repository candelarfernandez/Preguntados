    <!-- Aquí se mostrará el cronómetro -->
    <div>Tiempo Restante: <span id="tiempo-restante">15</span> segundos</div>
    
</div>
<script>
    // Inicializar el tiempo restante
    let tiempoRestante = 15;

    // Actualizar el contador cada segundo
    const interval = setInterval(function() {
        tiempoRestante--;
        document.getElementById("tiempo-restante").textContent = tiempoRestante;

        // Verificar si se ha quedado sin tiempo
        if (tiempoRestante <= 0) {
            clearInterval(interval); // Detener el contador
            // Realizar alguna acción, como marcar la respuesta como incorrecta y avanzar a la siguiente pregunta
        }
    }, 1000); // 1000 ms = 1 segundo
</script>


