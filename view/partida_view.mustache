
<script>
let tiempoRestante = sessionStorage.getItem("tiempoRestante") || 10; // Obtener el valor del tiempo restante de sessionStorage o usar 10 como valor predeterminado

const interval = setInterval(function() {
    tiempoRestante--;
    document.getElementById("tiempo-restante").textContent = tiempoRestante;

    if (tiempoRestante <= 0) {
        clearInterval(interval);
        
        fetch('/partida/tiempoAgotado', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.href = '/lobby/list?tiempoAgotado=true';
            }
        })
        
    }
}, 1000);

// Al hacer clic en una respuesta
function guardarTiempoRestante() {
    sessionStorage.setItem("tiempoRestante", tiempoRestante); // Guardar el tiempo restante en sessionStorage
}
</script>

