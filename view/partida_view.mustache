

<script>
    let tiempoRestante = 20;

    const interval = setInterval(function() {
        tiempoRestante--;
        document.getElementById("tiempo-restante").textContent = tiempoRestante;

        if (tiempoRestante <= 0) {
            clearInterval(interval); 
        }
    }, 1000); 
</script>

