<div class="bg-violet-100 flex items-center justify-center h-screen">
<div class="w-full max-w-md bg-white rounded-lg shadow-md p-6">
    <div class="text-center">
        <img src="\public\img\login.png" alt="Logo" class="w-40 h-40 mx-auto mb-4">
        <h1 class="text-2xl font-semibold">Hora de responder</h1>
    </div>


    <div>

        {{#mensaje}}
            <div class="bg-green-400 rounded-md py-2 my-2 text-sm">
                <p class="text-white font-medium text-center"> Respuesta correcta </p>
            </div>        
            {{/mensaje}}

            {{#error}}
            <div class="bg-red-400 rounded-md py-2 my-2 text-sm">
                <p class="text-white font-medium text-center"> Respuesta Incorrecta </p>
            </div>
        {{/error}}

        <h2>{{pregunta.pregunta}}</h2>

    </div>
    {{#respuestas}}
        <form class="mt-6" action="/partida/respuesta" method="POST" >
            <div class="flex m-auto bg-violet-500 my-8 text-white py-2 px-4 rounded-md hover:bg-violet-600">
                <button type="submit"> {{respuesta}} </button>
                <input type="hidden" name="id" value="{{id}}">
                <input type="hidden" name="respuesta" value="{{respuesta}}">
            </div>

        </form>
    {{/respuestas}}
    {{#seguirJugando}}
            <form class="mt-6" action="/partida/jugar" method="get" >
            <div class="flex m-auto bg-yellow-500 my-8 text-white py-2 px-4 rounded-md hover:bg-violet-600">
                <button type="submit">Siguiente Pregunta</button>
            </div>
            </form>      
            {{/seguirJugando}}

    </div>
    </div>

            