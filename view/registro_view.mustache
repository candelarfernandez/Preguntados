<div class="w3-container w3-padding-16" style="max-width: 400px; margin: 0 auto;">
    <h2 class="w3-wide titulo-registro">Registro</h2>
    {{#exito}}
        <div class="w3-panel w3-green">
            <p>Se registró correctamente</p>
        </div>
    {{/exito}}

    {{#error}}
        <div class="w3-panel w3-red">
            <p>No se pudo registrar</p>
        </div>
    {{/error}}
 
        <form class="registro-formulario" action="/usuarios/add" method="post" enctype="multipart/form-data">
            <label for="nombre" class="registro-label">Nombre Completo:</label>
            <input type="text" id="nombre" name="nombre" class="w3-input w3-border w3-medium" required>

            <label for="anio" class="registro-label">Año de Nacimiento:</label>
            <input type="number" id="anio" name="anio" class="w3-input w3-border w3-medium" required>

            <label class="registro-label">Género:</label>
            <div class="contenedor-genero">
                <input type="radio" id="masculino" name="sexo" value="Masculino"> Masculino
                <input type="radio" id="femenino" name="sexo" value="Femenino"> Femenino
                <input type="radio" id="no_especificado" name="sexo" value="Prefiero no decirlo"> Prefiero no decirlo
            </div>

            <label for="pais" class="registro-label">País:</label>
            <select id="pais" name="pais" class="w3-select w3-border w3-medium" required>
                <option value="Selecciona un país">Selecciona un país</option>
                <option value="Argentina">Argentina</option>
                <option value="Chile">Chile</option>
                <option value="Uruguay">Uruguay</option>
                <option value="Paraguay">Paraguay</option>
            </select>

            <label for="ciudad" class="registro-label">Ciudad:</label>
            <input type="text" id="ciudad" name="ciudad" class="w3-input w3-border w3-medium" required>

            <label for="email" class="registro-label">Correo Electrónico:</label>
            <input type="email" id="email" name="email" class="w3-input w3-border w3-medium" required>

            <label for="contrasenia" class="registro-label">Contraseña:</label>
            <input type="password" id="contrasenia" name="contrasenia" class="w3-input w3-border w3-medium" required>

            <label for="confirmar_contrasena" class="registro-label">Confirmar Contraseña:</label>
            <input type="password" id="confirmar_contrasena" name="confirmar_contrasena" class="w3-input w3-border w3-medium" required>

            <label for="nombreUsuario" class="registro-label">Nombre de Usuario:</label>
            <input type="text" id="nombreUsuario" name="nombreUsuario" class="w3-input w3-border w3-medium" required>

            <label for="foto">Foto de Perfil:</label>
            <input type="file" id="foto" name="foto" class="w3-input w3-border w3-medium" accept="image/*">

            <input type="submit" value="Registrarse" class="w3-button w3-block w3-black w3-section w3-padding w3-medium boton-registrarse">
        </form>
</div>

