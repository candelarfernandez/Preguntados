<html>
  <head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load("current", {packages:["corechart"]});
      google.charts.setOnLoadCallback(drawChart);
      function drawChart() {
        var data = google.visualization.arrayToDataTable({{{usuariosPorPaises}}});

        var options = {
          title: 'Jugadores por pa√≠ses',
          pieHole: 0.4,
        };

        var chart = new google.visualization.PieChart(document.getElementById('donutchart'));
        chart.draw(data, options);

        document.getElementById('graficoImagen').value = chart.getImageURI();
      }
    </script>
  </head>
  <body>
  <div class="container mx-auto p-6 flex justify-center items-center h-screen">
    <div class="bg-white rounded-lg shadow-md p-6 w-full md:w-3/4 lg:w-2/3 xl:w-1/2">
        <form action="" method="post" class="mb-4">
            <label for="fechaRegistro" class="block text-gray-600 text-sm font-medium mb-2">Elija fecha de registro:</label>
            <input type="date" name="fechaRegistro" class="w-full p-2 border rounded-md" required>
            <button type="submit" class="mt-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Filtrar
            </button>
        </form>
        <div id="donutchart" style="width: 100%; height: 400px;"></div>
    </div>
</div>
    <a href="/admin/list" class="absolute top-4 left-4">
        <button class="bg-violet-700 rounded-full p-2 text-white">volver
            <i class="fas fa-sign-out-alt text-white"></i>
        </button>
    </a>
  <form method="post" action="/admin/graficoPorPais">
      <button type="submit" class="bg-violet-500 table-auto w-full text-white py-2 px-4 rounded-md mb-4 hover:bg-violet-600">Reporte PDF</button>
      <input type="hidden" name="graficoImagen" id="graficoImagen">
      <input type="hidden" name="tituloPDF" id="tituloPDF" value="Paises de los usuarios">
      <input type="hidden" name="titulo" id="titulo" value="Paises de usuarios">
  </form>
  </body>
</html>


